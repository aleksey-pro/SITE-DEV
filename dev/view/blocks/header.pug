header.header

  a.header__logo(href="/")
    img.header__logo-image(src='images/logo_154x73.svg' alt='site-dev')
    span.header__logo-text sitedev.spb.ru

  ul.header__menu.nav#menu
    mixin nav-mixin(name, data)
      li(class="nav__item inline" data-menuanchor=data)
        a.nav__link(href=`#${data}`)= name
    +nav-mixin('преимущества', 'advantages')
    +nav-mixin('услуги', 'services')
    +nav-mixin('примеры', 'works')   
    +nav-mixin('с чего начать', 'start')
    +nav-mixin('заказать', 'order')

  .header__menu-mobile
    .hamburger#hamburger-9
      span.line
      span.line
      span.line

    ul.header__dropdown-menu.nav-dropdown      
      +nav-mixin('преимущества', 'advantages')
      +nav-mixin('услуги', 'services')
      +nav-mixin('примеры', 'works')   
      +nav-mixin('с чего начать', 'start')
      +nav-mixin('заказать', 'order')

  .header__btns
      a(href="tel:+79522326240").phone
        svg(width='30px' height='30px').contacts__ico.contacts__ico--viber
          use(xlink:href='images/SVG.svg#viber')
      a(href="https://t.me/ISAEV_ALEKSEY" target="_blank").telegram
        svg(width='30px' height='30px').header__btns-ico
          use(xlink:href='images/SVG.svg#telegram')


